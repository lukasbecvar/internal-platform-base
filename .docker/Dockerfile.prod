# define base php-apache image (production environment)
FROM php:8.4-apache

# set container working directory
WORKDIR /var/www

# copy project file to image
COPY . /var/www/
COPY .docker/configs/php.ini /usr/local/etc/php/php.ini
COPY .docker/configs/apache-site.conf /etc/apache2/sites-available/000-default.conf

# install required packages
RUN apt-get update && apt-get install -y \
    libicu-dev \
    rpm
    
# install PHP extensions
RUN docker-php-ext-install pdo_mysql pdo intl

# install OPCache extension
RUN docker-php-ext-install opcache

{% extends "common/layout.twig" %}

{# ABOUT INFO COMPONENT #}
{% block component %}
<div class="flex flex-col h-full">
    {# SUB-NAVIGATION #}
    <div class="flex-shrink-0 px-2 py-1 border-b border-gray-700/50 bg-gray-800/30">
        <div class="flex items-center justify-between gap-2">
            <div class="flex items-center gap-3">
                <a href={{ path('app_dashboard') }} title="Back to dashboard" class="w-8 h-8 bg-gray-700/50 hover:bg-gray-600/50 rounded flex items-center justify-center transition-all duration-200 border border-gray-600/30">
                    <i class="fas fa-arrow-left text-gray-300 text-xs"></i>
                </a>
                <div class="hidden sm:block">
                    <h1 class="text-xm font-bold text-white">About</h1>
                    <p class="text-gray-400 text-xs">System information and project details</p>
                </div>
            </div>
        </div>
    </div>

    {# MAIN CONTENT AREA #}
    <div class="flex-1 flex flex-col min-h-0">
        <div class="flex items-center justify-center sm:p-8">
            <div class="w-full max-w-4xl mx-auto">
                <div class="backdrop-blur-md bg-gray-800/50 sm:border border-gray-700/50 sm:rounded shadow-xl text-white w-full overflow-hidden">
                    <div class="p-4">
                        <div class="space-y-4">
                            {# TOP ROW - PROJECT INFO & QUICK LINKS #}
                            <div class="grid grid-cols-1 lg:grid-cols-1 gap-4">
                                {# PROJECT OVERVIEW #}
                                <div class="bg-gray-700/30 rounded p-3 border border-gray-600/30">
                                    <div class="flex items-center gap-3 mb-3">
                                        <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded flex items-center justify-center shadow-lg">
                                            <img src="/assets/images/pwa-icon.webp" alt="internal platform Icon" class="w-8 h-8 rounded">
                                        </div>
                                        <div>
                                            <h2 class="text-lg font-bold text-white">Internal Platform</h2>
                                            <p class="text-gray-400 text-xs">Internal system</p>
                                        </div>
                                    </div>
                                    <p class="text-gray-300 text-xs leading-relaxed">
                                        Solution for building internal systems.
                                    </p>
                                </div>
                            </div>

                            {# BOTTOM ROW - CONTACT & LICENSE #}
                            <div class="grid grid-cols-1 lg:grid-cols-1 gap-4">
                                {# CONTACT #}
                                <div class="bg-gray-700/30 rounded p-3 border border-gray-600/30">
                                    <div class="flex items-center gap-2 mb-3">
                                        <i class="fas fa-envelope text-blue-400 text-sm"></i>
                                        <h3 class="text-lg font-semibold text-white">Contact</h3>
                                    </div>
                                    <a href="mailto:{{ adminContactEmail|e }}"
                                       class="flex items-center gap-3 p-2 bg-blue-500/10 hover:bg-blue-500/20 rounded transition-all duration-200 border border-blue-500/30">
                                        <div class="w-7 h-7 bg-blue-500/20 rounded flex items-center justify-center">
                                            <i class="fas fa-envelope text-blue-400 text-sm"></i>
                                        </div>
                                        <div>
                                            <div class="text-blue-300 font-medium text-xs">{{ adminContactEmail|e }}</div>
                                            <div class="text-gray-400 text-xs">Contact administrator</div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>

                        {# FOOTER #}
                        <div class="mt-3 pt-3 border-t border-gray-700/50 text-center">
                            <p class="text-gray-500 text-xs">&copy; {{ "now"|date("Y") }} Internal Platform. All rights reserved.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

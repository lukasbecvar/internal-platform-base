<div id="token-regenerate-popup-overlay" class="fixed inset-0 bg-black/80 flex items-center justify-center z-50 hidden">
    <div class="backdrop-blur-lg bg-gray-800/90 rounded-xl p-8 border border-gray-600/50 animate-popin shadow-2xl max-w-md w-full mx-4">
        <div class="flex items-center gap-3 mb-6">
            <div class="w-8 h-8 bg-orange-500/20 rounded flex items-center justify-center">
                <i class="fas fa-key text-orange-400 text-lg"></i>
            </div>
            <div>
                <h3 class="text-xl font-semibold text-white">Regenerate Token</h3>
                <p class="text-gray-400 text-sm">Authentication token regeneration</p>
            </div>
        </div>

        <div class="mb-6">
            <div class="p-4 bg-orange-500/10 border border-orange-500/30 rounded">
                <div class="flex items-start gap-2">
                    <i class="fas fa-exclamation-triangle text-orange-400 text-sm mt-0.5"></i>
                    <div>
                        <p class="text-orange-300 text-sm font-medium mb-1">Warning</p>
                        <p class="text-gray-300 text-sm leading-relaxed">This will regenerate the authentication token for this user and invalidate any existing "Remember Me" sessions.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex justify-end gap-3">
            <button id="token-regenerate-cancel-button" class="inline-flex items-center gap-2 px-4 py-2 bg-gray-700/50 hover:bg-gray-600/50 text-gray-300 hover:text-white rounded border border-gray-600/30 transition-all duration-200 text-sm font-medium">
                <i class="fas fa-times text-xs"></i>
                <span>Cancel</span>
            </button>
            <button id="token-regenerate-confirm-button" class="inline-flex items-center gap-2 px-4 py-2 bg-orange-500/20 hover:bg-orange-500/30 text-orange-300 hover:text-orange-200 rounded border border-orange-500/30 transition-all duration-200 text-sm font-medium">
                <i class="fas fa-key text-xs"></i>
                <span>Regenerate Token</span>
            </button>
        </div>
    </div>
</div>

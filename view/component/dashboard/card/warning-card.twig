<div id="warning-box" class="backdrop-blur-md bg-gray-800/50 border border-gray-700/50 rounded shadow-xl text-white w-full overflow-hidden w-full sm:col-span-2 transition-all duration-500 ease-in-out transform">
    <div class="px-2 py-2 border-b border-gray-700/50 font-semibold tracking-wide text-sm uppercase text-gray-200 flex items-center justify-between">
        <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-amber-500/20 rounded flex items-center justify-center">
                <i class="fas fa-exclamation-triangle text-amber-400 text-sm"></i>
            </div>
            <div class="text-sm text-gray-200 hover:text-white transition-colors duration-200">
                Diagnostic Alerts
            </div>
        </div>
        <button type="button" id="close-warning-box" class="group relative w-7 h-7 rounded hover:bg-red-500/20 text-gray-400 hover:text-red-400 transition-all duration-200 cursor-pointer flex items-center justify-center shrink-0">
            <i class="fas fa-times text-xl transition-transform duration-200 leading-none absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2"></i>
            <div class="absolute inset-0 rounded border border-transparent group-hover:border-red-500/30 transition-colors duration-200"></div>
        </button>
    </div>
    <div class="p-1 space-y-1" id="wraning-elements">
        {# ANGLOG STATUS ALERT #}
        {% if antiLogStatus == false %}
            <div class="bg-yellow-500/10 border border-yellow-500/30 rounded p-3 flex items-start gap-3 hover:bg-yellow-500/15 transition-all duration-300 shadow-lg">
                <div class="flex-shrink-0 mt-0.5">
                    <div class="w-8 h-8 bg-yellow-500/20 rounded-full flex items-center justify-center">
                        <i class="fas fa-eye text-yellow-400 text-sm"></i>
                    </div>
                </div>
                <div class="flex-1 min-w-0">
                    <h4 class="text-yellow-300 font-semibold text-sm mb-1">Browser Logging Enabled</h4>
                    <p class="text-gray-300 text-sm mb-2">Logging for your browser is currently enabled</p>
                    
                    {# ENABLE ANTI-LOG BUTTON #}
                    <form method="POST" action={{ path('app_anti_log_enable') }} style="display:inline">

                        {# ANTI LOG STATE #}
                        <input type="hidden" name="state" value="enable">

                        {# INCLUDE REQUEST PARAMETERS #}
                        <input type="hidden" name="csrf_token" value={{ csrf_token('internal-csrf-token') }}>

                        {# SUBMIT BUTTON #}
                        <button
                            type="submit"
                            class="inline-flex items-center gap-2 px-3 py-1.5 bg-yellow-500/20 hover:bg-yellow-500/30 transition-all duration-200 shadow-sm
                                border border-yellow-500/40 rounded-md text-yellow-300 hover:text-yellow-200 text-sm font-medium"
                            >
                            <span>Disable Logging</span>
                            <i class="fas fa-arrow-right text-xs"></i>
                        </button>
                    </form>
                </div>
            </div>
        {% endif %}

        {# LOGS COUNT ALERT #}
        {% if unreadedLogsCount > 0 %}
            <div class="bg-blue-500/10 border border-blue-500/30 rounded p-3 flex items-start gap-3 hover:bg-blue-500/15 transition-all duration-300 shadow-lg">
                <div class="flex-shrink-0 mt-0.5">
                    <div class="w-8 h-8 bg-blue-500/20 rounded-full flex items-center justify-center">
                        <i class="fas fa-bell text-blue-400 text-sm"></i>
                    </div>
                </div>
                <div class="flex-1 min-w-0">
                    <h4 class="text-blue-300 font-semibold text-sm mb-1">New Logs Available</h4>
                    <p class="text-gray-300 text-sm mb-2">{{ unreadedLogsCount }} unread log entries found</p>
                    <a 
                        href={{ path('app_manager_logs') }}
                        class="inline-flex items-center gap-2 px-3 py-1.5 bg-blue-500/20 hover:bg-blue-500/30 border border-blue-500/40 rounded-md
                            text-blue-300 hover:text-blue-200 text-sm font-medium transition-all duration-200 shadow-sm"
                        >
                        <span>View Logs</span>
                        <i class="fas fa-arrow-right text-xs"></i>
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
</div>

{# INCLUDE JS FOR WARNING CARD #}
{{ encore_entry_script_tags('warning-card-js') }}
